<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springtest.dao.StationMapper" >
  <resultMap id="BaseResultMap" type="com.example.springtest.domain.Station" >
    <!--
      WARNING - @mbg.generated
    -->
    <id column="station_id" property="stationId" jdbcType="INTEGER" />
    <result column="station_name" property="stationName" jdbcType="VARCHAR" />
    <result column="city_id" property="cityId" jdbcType="INTEGER" />
  </resultMap>
  <select id="getStationsByCity" resultMap="BaseResultMap">
    select s.station_name
    from station as s left join city as c on s.city_id = c.city_id
    where c.city_name = #{cityName};
  </select>
</mapper>